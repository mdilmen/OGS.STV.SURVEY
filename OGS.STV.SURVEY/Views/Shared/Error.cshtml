@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="p-3 col-12 offset-0 col-sm-12 offset-sm-0 col-md-12 offset-md-0 col-lg-4 offset-lg-4 col-xl-4 offset-xl-4">
    <h1 class="text-danger">Hata.</h1>
    <h2 class="text-danger">Bir hata oluştu.</h2>

    @if (Model.ShowRequestId)
    {
        <p>
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }

    @if (!string.IsNullOrEmpty(Model.ApiRoute))
    {
        <p>
            <strong>API Route :</strong><code>@Model.ApiRoute</code>
            <br />
            <strong>API Status :</strong><code>@Model.ApiStatus</code>
        </p>

    }
</div>