@model List<ReportViewModel>
@{
    ViewBag.Title = "Rapor";
}

<div class="p-5 small">
    <table class="table table-striped table-light table-responsive-sm">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Tarih</th>
                <th scope="col">Kart No</th>                
                <th scope="col">Ad Soyad</th>
                <th scope="col">Sigortalar</th>
                <th scope="col">Şehir</th>
                <th scope="col">E-Posta</th>
                <th scope="col">Telefon</th>
                <th scope="col">Mail Durumu</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var info in Model)
            {
            <tr>
                <th scope="row">@info.Id</th>
                <td>@info.CreateDate</td>
                <td>@info.CardNO</td>                
                <td>@info.FullName</td>
                <td>@info.InsuranceList</td>
                <td>@info.City</td>
                <td>@info.Email</td>
                <td>@info.Phone</td>

                @if (info.MailSend == "MailSend")
                {
                    <td> Gönderildi </td>
                }
                else
                {
                    <td> Gönderilmedi</td>
                }



            </tr>
            }
        </tbody>
    </table>

</div>
